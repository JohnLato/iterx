category:            Control
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     IterX,
                       IterX.Attoparsec,
                       IterX.Generators,
                       IterX.Core,
                       IterX.Exception,
                       IterX.Fusion.Fold,
                       IterX.Fusion.Hylo,
                       IterX.Fusion.Stream,
                       IterX.Fusion.Unfold,
                       IterX.Fusion,
                       IterX.IterX,
                       IterX.Parser,
                       IterX.Parser.Binary,
                       IterX.ReadableChunk,
                       IterX.Unsafe
